<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout5"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/rectangle_shadow"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/list_item_driver_position"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/formula_one_bold"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/colorBlack"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/list_item_driver_surname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/formula_one_bold"
                    android:gravity="bottom"
                    android:paddingTop="8dp"
                    android:text="Surname"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/list_item_driver_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/formula_one_regular"
                    android:gravity="bottom|left"
                    android:text="name"
                    android:textColor="@color/colorBlack"
                    android:textSize="14sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/list_item_driver_team"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/formula_one_regular"
                android:gravity="top|left"
                android:paddingBottom="8dp"
                android:text="Team"
                android:textColor="@color/colorBlack"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!--
        <TextView
            android:id="@+id/list_item_driver_nationality"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:fontFamily="@font/formula_one_regular"
            android:gravity="center_horizontal|center_vertical"
            android:text="Nation"
            android:textColor="@android:color/black"
            android:textSize="16sp" />
        -->

        <ImageView
            android:id="@+id/list_item_driver_nationality"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"
            android:padding="12dp"
            app:srcCompat="@android:color/background_light" />

        <TextView
            android:id="@+id/list_item_driver_points"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="8dp"
            android:layout_weight="2"
            android:fontFamily="@font/formula_one_regular"
            android:gravity="left|center_vertical"
            android:text="Points"
            android:textAlignment="viewEnd"
            android:textColor="@android:color/black"
            android:textSize="16dp"
            android:textStyle="bold" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>